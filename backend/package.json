{
  "name": "christmas-list-server",
  "version": "1.0.0",
  "description": "Christmas List App Server",
  "main": "src/server.js",
  "repository": "https://github.com/potterbm/ChristmasList",
  "license": "MIT",
  "scripts": {
    "start": "nodemon src/server.js --exec babel-node --presets es2015,stage-0"
  },
  "dependencies": {
    "body-parser": "^1.16.0",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "graphql": "^0.9.0",
    "graphql-server-express": "^0.5.2",
    "graphql-subscriptions": "^0.2.3",
    "graphql-tools": "^0.9.2",
    "sequelize": "^3.30.0",
    "sqlite3": "^3.1.8",
    "subscriptions-transport-ws": "^0.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-inline-import": "^2.0.4",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "nodemon": "^1.11.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "indent": [
        "error",
        4
      ]
    },
    "env": {
      "mocha": true
    }
  }
